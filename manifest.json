{
    "manifest_version": 2,
    "name": "douyu assistant",
    "description": "list your following douyu hosts on chrome",
    "version": "1.0.0",
    "icons": {
        "16": "img/icon.png",
        "48": "img/icon.png",
        "128": "img/icon.png"
    },
    "permissions": [
        "tabs",
        "storage",
        "notifications",
        "http://www.douyutv.com/"
    ],
    "background": {
        "scripts": [
            "lib/jquery.min.js",
            "lib/analyzer.js",
            "background/background.js"
        ]
    },
    "content_scripts":[{
        "all_frames": true,
        "matches": ["http://www.douyutv.com/member/cp/get_follow_list"],
        "js": [
            "content/content_script.js"
        ]
    }],
    "browser_action": {
        "default_icon": "img/icon.png",
        "default_title": "douyu assistant",
        "default_popup": "popup/popup.html"
    },
    "options_page": "options/options.html"
}
